<%- include('partials/header') %>

<div class="vertical-center">
  <div class="container container-login mt-5">
    <h4 class="text-center">Login to Counter</h4>
    <p class="text-center text-secondary">Handy incrementation tool</p>
    <!--Makes POST request to /login route-->
    <form action="" method="POST">
      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" class="form-control" name="username">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" class="form-control" name="password">
      </div>
      <button id="submit" type="button" class="btn btn-custom btn-block">Login</button>
    </form>
  </div>
</div>

<script src="js/app.js"></script>

<%- include('partials/footer') %>
